proc Addition(float $input[])
{
int $sum = 0;
for ($i=0; $i<(size($input)); $i++)
{
    if ($i < (size($input) - 1))
    {
         $sum += $input[$i];
        print ($input[$i] + " + ");
    }
    else
    {
        $sum += $input[$i];
        print($input[$i] + " = ");
    }
}
print ($sum + "\n");
}

proc Subtraction(float $input[])
{
    int $sum = $input[0];
    for($i=0; $i<(size($input)); $i++)
    {
     if ($i < (size($input) - 1))
    {
         $sum -= $input[$i];
        print ($input[$i] + " - ");
    }
    else
    {
        $sum -= $input[$i];
        print($input[$i] + " = ");
    }
    }
    print ($sum + $input[0] + "\n");
}

proc Multiplication(float $input[])
{
    float $sum = $input[0];
    $size = size($input);
    for ($i=1; $i<(size($input)); $i++)
    {
    if ($size = 2)
    {
        $sum *= $input[$i];
        print( $input[0] + " * " + $input[1] + " = "); 
    }
    else
    {
        if ( $i < (size($input) -1))
    {
        $sum *= $input[$i];
        print($input[$i] + " * ");
    }
    else 
    {
        $sum *= $input[$i];
        print($input[$i] + " = ");
    }
    }
    }
    print ($sum + "\n");
}

proc Division(float $input[])
{
    float $sum = $input[0];
    for ($i=1; $i<(size($input)); $i++)
   {
    if ($size = 2)
    {
        $sum /= $input[$i];
        print( $input[0] + " / " + $input[1] + " = "); 
    }
